<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
    android:paddingRight="?android:attr/listPreferredItemPaddingRight"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" >

    <ImageView
        android:id="@+id/image_primary_action_avatar"
        android:layout_width="?attr/listPreferredListItemAvatarWidth"
        android:layout_height="?attr/listPreferredListItemAvatarHeight" />

    <LinearLayout
        android:id="@+id/layout_primary_action_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:paddingTop="?attr/listPreferredItemPaddingTop"
        android:paddingBottom="?attr/listPreferredItemPaddingBottom">

        <TextView
            android:id="@+id/textview_primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textview_secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_secondary_action_icon"
        android:layout_width="?attr/touchableAssetLayoutWidth"
        android:layout_height="?attr/touchableAssetLayoutHeight" />
