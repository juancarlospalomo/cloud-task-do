<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Widget.TileTitle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?attr/tileTitleTextAppearance</item>
    </style>

    <style name="Widget.TileTitle.tileTitleTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text styles replied from Material Design theme -->

    <style name="AppProductivityTheme.TextAppearance" parent="android:TextAppearance" />

    <style name="AppProductivityTheme.TextAppearance.Material">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textColorHint">?attr/textColorHint</item>
        <item name="android:textColorHighlight">?attr/textColorHighlight</item>
        <item name="android:textColorLink">?attr/textColorLink</item>
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="fontFamily">@string/font_family_body_1_material</item>
    </style>

    <style name="AppProductivityTheme.TextAppearance.Material.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="fontFamily">@string/font_family_subhead_material</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <!-- New attribute to set the padding to text with avatar, text and icon -->
        <item name="android:paddingLeft">@dimen/list_primary_action_text_avatar_text</item>
    </style>

    <style name="AppProductivityTheme.TextAppearance.Material.Body1">
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="fontFamily">@string/font_family_body_1_material</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <!-- New attribute to set the padding to text with avatar, text and icon -->
        <item name="android:paddingLeft">@dimen/list_primary_action_text_avatar_text</item>
    </style>

</resources>
